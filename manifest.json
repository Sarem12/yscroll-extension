{
  "manifest_version": 3,
  "name": "YScroll: Stop The Endless Scroll & Get Your Work Done",
  "version": "1.3",
  "description": "Stop the endless scrolling, get your work done, Limit your time on short-form content with YScroll",
  "permissions": ["storage", "tabs", "alarms"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.tiktok.com/*",
    "*://*.linkedin.com/*",
    "*://*.instagram.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["contentScripts/youtube.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["contentScripts/tiktok.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["contentScripts/linkedin.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["contentScripts/instagram.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/logo.png"],
      "matches": [
        "*://*.youtube.com/*",
        "*://*.tiktok.com/*",
        "*://*.linkedin.com/*",
        "*://*.instagram.com/*"
      ]
    }
  ]
}
